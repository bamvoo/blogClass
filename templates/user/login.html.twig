{% extends 'base.html.twig' %}
{# en caso de que queramos poner algún error#}
{% block error %}{% endblock %}
{% block title %}Inicia sesión{% endblock %}

{% block body %}
        <div class="col-lg-4 box-form">
            <h2>Login here</h2>
            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-success">Loginea</button>
            </form>
        </div>
{% endblock %}